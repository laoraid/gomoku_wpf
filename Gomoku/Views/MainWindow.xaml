<Window x:Class="Gomoku.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:Gomoku.Models"
        xmlns:conv="clr-namespace:Gomoku.Converter"
        xmlns:local="clr-namespace:Gomoku.Views" xmlns:viewmodels="clr-namespace:Gomoku.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        TextElement.Foreground="{Binding ElementName=AppearanceElement, Path=(TextElement.Foreground)}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}"
        
        Title="MainWindow" Height="642" Width="834">
    <Window.Resources>
        <conv:EnumToBoolConverter x:Key="EnumToBool"/>
        <conv:BoolToHiddenConverter x:Key="BoolToVisibility"/>
        <Style x:Key="GomokuCellStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="Transparent">
                            <!-- 격자선 : 15x15 꽉 찬 타일 안에 십자선 그려서 바둑판 격자 -->
                            <Rectangle Height="1" Fill="Black" VerticalAlignment="Center"/>
                            <Rectangle Width="1" Fill="Black" HorizontalAlignment="Center"/>
                            <!-- 돌 -->
                            <Ellipse x:Name="StoneShape" Margin="3" Visibility="Collapsed"/>
                            
                            <!-- 마지막 돌 표시 -->
                            <Ellipse x:Name="LastStoneMarker" Width="6" Height="6" Fill="Red" Visibility="Collapsed" IsHitTestVisible="False"/>

                            <!-- 금수 시에 빨간색 X 표시 -->
                            <!-- 0,0에서 10,10까지 선, 10,0에서 0,10 까지 선 -->
                            <Path x:Name="ForbiddenMark"
                                  Data="M 0,0 L 10,10 M 10,0 L 0,10"
                                  Stretch="Uniform"
                                  Stroke="Red"
                                  StrokeThickness="2"
                                  Margin="8"
                                  Visibility="Collapsed"
                                  IsHitTestVisible="False"
                                  />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- 1이면 흑돌 -->
                            <DataTrigger Binding="{Binding StoneState}" Value="1">
                                <Setter TargetName="StoneShape" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="StoneShape" Property="Fill" Value="Black"/>
                            </DataTrigger>
                            <!-- 2면 백돌 -->
                            <DataTrigger Binding="{Binding StoneState}" Value="2">
                                <Setter TargetName="StoneShape" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="StoneShape" Property="Fill" Value="White"/>
                                <Setter TargetName="StoneShape" Property="Stroke" Value="Black"/>
                            </DataTrigger>
                            <!-- 금수시에 X자 표시 -->
                            <DataTrigger Binding="{Binding IsForbidden}" Value="True">
                                <Setter TargetName="ForbiddenMark" Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                            <!-- 마지막에 놓인 돌 표시 -->
                            <DataTrigger Binding="{Binding IsLastStone}" Value="True">
                                <Setter TargetName="LastStoneMarker" Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="PlayerInfoPanelStyle" TargetType="StackPanel">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5,5,0,5"/>
            <Setter Property="Orientation" Value="Horizontal"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="LightGray"/>
                </Trigger>

            </Style.Triggers>
        </Style>
    </Window.Resources>


    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="연결" Command="{Binding OpenConnectWindowCommand}"/>
        </Menu>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- 바둑판 -->
                <ColumnDefinition Width="230"/>
                <!-- 플레이어 정보 및 채팅 -->
            </Grid.ColumnDefinitions>


            <!-- 바둑판 -->
            <Grid>
                <ItemsControl Grid.Column="0" ItemsSource="{Binding BoardCells}">

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <!-- 15x15 격자 -->
                            <UniformGrid Columns="15" Rows="15" Background="SandyBrown"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding DataContext.PlaceStoneCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource GomokuCellStyle}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button HorizontalAlignment="Center" VerticalAlignment="Center" Content="게임 시작"
                        Command="{Binding StartGameCommand}"
                        Visibility="{Binding CanShowStartButton, Converter={StaticResource BoolToVisibility}}"/>
            </Grid>
            <Grid Grid.Column="1" Margin="10,0,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- 흑 정보 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 백 정보 -->
                    <RowDefinition Height="1*"/>
                    <!-- 참여자 목록 -->
                    <RowDefinition Height="2*"/>
                    <!-- 채팅 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 메시지 입력 -->
                </Grid.RowDefinitions>
                <StackPanel Orientation="Vertical" >

                    <!-- 흑 정보 -->
                    <materialDesign:Card Margin="0,0,0,3">
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                            Command="{Binding JoinGameCommand}"
                            CommandParameter="{x:Static models:PlayerType.Black}"
                            HorizontalContentAlignment="Stretch" Padding="8,4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse Grid.Column="0" Width="20" Height="20" Fill="Black" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="{Binding BlackNickname}" FontWeight="Bold" Width="100" Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                <Button Grid.Column="2" Content="나가기" FontSize="10" Margin="5,0" Padding="4,0" VerticalAlignment="Center" Height="24"
                                Command="{Binding LeaveGameCommand}" Visibility="{Binding IsMeBlack, Converter={StaticResource BoolToVisibility}}"/>
                                <TextBlock Grid.Column="3" Text="{Binding Blacktime}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </Button>
                    </materialDesign:Card>
                    <!-- 백 정보 -->
                    <materialDesign:Card>
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                            Command="{Binding JoinGameCommand}"
                            CommandParameter="{x:Static models:PlayerType.White}"
                            HorizontalContentAlignment="Stretch" Padding="8,4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse Grid.Column="0" Width="20" Height="20" Fill="White" Margin="0,0,10,0" Stroke="Black" StrokeThickness=".5"/>
                                <TextBlock Grid.Column="1" Text="{Binding WhiteNickname}" FontWeight="Bold" Width="100" Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                <Button Grid.Column="2" Content="나가기" FontSize="10" Margin="5,0" Padding="4,0" VerticalAlignment="Center" Height="24"
                                Command="{Binding LeaveGameCommand}" Visibility="{Binding IsMeWhite, Converter={StaticResource BoolToVisibility}}"/>

                                <TextBlock Grid.Column="3" Text="{Binding Whitetime}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </Button>
                    </materialDesign:Card>
                </StackPanel>
                <!-- 유저 리스트 -->
                <materialDesign:Card Grid.Row="2" Margin="0,4,0,4">
                    <ListBox ItemsSource="{Binding UserList}"/>
                </materialDesign:Card>
                <!-- 채팅 메시지 -->
                <materialDesign:Card Grid.Row="3" Margin="0,0,0,4">
                    <ListBox x:Name="ChatListBox" ItemsSource="{Binding ChatMessages}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         HorizontalAlignment="Stretch">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Focusable" Value="False"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <!-- 채팅 영역 텍스트 자동 줄바꿈 -->
                                <TextBlock Text="{Binding}" TextWrapping="Wrap" FontSize="13"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </materialDesign:Card>
                <!-- 채팅 메시지 입력 -->
                <Grid Grid.Row="4" Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="{Binding ChatInput, UpdateSourceTrigger=PropertyChanged}">
                        <!-- 채팅 입력 텍스트박스 -->
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding SendChatCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    <!-- 전송 버튼 -->
                    <Button Content="전송" FontSize="11" Grid.Column="1" Padding="0" 
                            Command="{Binding SendChatCommand}" Width="50"/>
                </Grid>

            </Grid>
        </Grid>
    </DockPanel>
</Window>
