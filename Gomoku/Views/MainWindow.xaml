<Window x:Class="Gomoku.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:Gomoku.Models"
        xmlns:conv="clr-namespace:Gomoku.Converter"
        xmlns:local="clr-namespace:Gomoku.Views" xmlns:viewmodels="clr-namespace:Gomoku.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <conv:EnumToBoolConverter x:Key="EnumToBool"/>
        <Style x:Key="GomokuCellStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="Transparent">
                            <!-- 격자선 : 15x15 꽉 찬 타일 안에 십자선 그려서 바둑판 격자 -->
                            <Rectangle Height="1" Fill="Black" VerticalAlignment="Center"/>
                            <Rectangle Width="1" Fill="Black" HorizontalAlignment="Center"/>
                            <!-- 돌 -->
                            <Ellipse x:Name="StoneShape" Margin="3" Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- 1이면 흑돌 -->
                            <DataTrigger Binding="{Binding StoneState}" Value="1">
                                <Setter TargetName="StoneShape" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="StoneShape" Property="Fill" Value="Black"/>
                            </DataTrigger>
                            <!-- 2면 백돌 -->
                            <DataTrigger Binding="{Binding StoneState}" Value="2">
                                <Setter TargetName="StoneShape" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="StoneShape" Property="Fill" Value="White"/>
                                <Setter TargetName="StoneShape" Property="Stroke" Value="Black"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="연결" Command="{Binding OpenConnectWindowCommand}"/>
        </Menu>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- 바둑판 -->
                <ColumnDefinition Width="230"/>
                <!-- 플레이어 정보 및 채팅 -->
            </Grid.ColumnDefinitions>


            <!-- 바둑판 -->
            <Grid>
                <ItemsControl Grid.Column="0" ItemsSource="{Binding BoardCells}">

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <!-- 15x15 격자 -->
                            <UniformGrid Columns="15" Rows="15" Background="SandyBrown"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding DataContext.PlaceStoneCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource GomokuCellStyle}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button HorizontalAlignment="Center" VerticalAlignment="Center" Content="게임 시작"
                        Command="{Binding StartGameCommand}"
                        Visibility="{Binding CanShowStartButton, Converter={StaticResource BoolToVisibility}}"/>
            </Grid>
            <Grid Grid.Column="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- 흑 정보 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 백 정보 -->
                    <RowDefinition Height="1*"/>
                    <!-- 참여자 목록 -->
                    <RowDefinition Height="2*"/>
                    <!-- 채팅 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 메시지 입력 -->
                </Grid.RowDefinitions>
                <StackPanel Orientation="Vertical" >

                <!-- 흑 정보 -->
                    <StackPanel Orientation="Horizontal" Margin="5,5,0,5">
                        <StackPanel.InputBindings> <!-- 클릭 시 참가 -->
                            <MouseBinding MouseAction="LeftClick"
                                          Command="{Binding JoinGameCommand}"
                                          CommandParameter="{x:Static models:PlayerType.Black}"/>
                        </StackPanel.InputBindings>
                        <Ellipse Width="20" Height="20" Fill="Black" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding BlackNickname}" FontWeight="Bold" Width="100"/>

                        <Button Content="나가기" FontSize="10" Margin="10,0,10,0" Padding="3,0"
                                Command="{Binding LeaveGameCommand}" Visibility="{Binding IsMeBlack, Converter={StaticResource BoolToVisibility}}"/>
                        <TextBlock Text="{Binding Blacktime}"/>
                    </StackPanel>
                    <Separator Background="Gray" Margin="0,0,0,5"/>
                    <!-- 백 정보 -->
                    <StackPanel Orientation="Horizontal" Margin="5,5,0,5">
                        <StackPanel.InputBindings> <!-- 클릭 시 참가 -->
                            <MouseBinding MouseAction="LeftClick"
                                          Command="{Binding JoinGameCommand}"
                                          CommandParameter="{x:Static models:PlayerType.White}"/>
                        </StackPanel.InputBindings>
                        <Ellipse Width="20" Height="20" Fill="White" Margin="0,0,10,0" Stroke="Black" StrokeThickness=".5"/>
                        <TextBlock Text="{Binding WhiteNickname}" FontWeight="Bold" Width="100"/>

                        <Button Content="나가기" FontSize="10" Margin="10,0,10,0" Padding="3,0"
                                Command="{Binding LeaveGameCommand}" Visibility="{Binding IsMeWhite, Converter={StaticResource BoolToVisibility}}"/>

                        <TextBlock Text="{Binding Whitetime}"/>
                    </StackPanel>
                </StackPanel>
                <!-- 유저 리스트 -->
                <ListBox Grid.Row="2" ItemsSource="{Binding UserList}"/>
                <!-- 채팅 메시지 -->
                <ListBox Grid.Row="3" ItemsSource="{Binding ChatMessages}"/>
                <!-- 채팅 메시지 입력 -->
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="{Binding ChatInput, UpdateSourceTrigger=PropertyChanged}"> <!-- 채팅 입력 텍스트박스 -->
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding SendChatCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    <!-- 전송 버튼 -->
                    <Button Content="전송" Grid.Column="1" Command="{Binding SendChatCommand}" Width="50"/>
                </Grid>

            </Grid>
        </Grid>
    </DockPanel>
</Window>
