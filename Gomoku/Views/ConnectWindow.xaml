<Window x:Class="Gomoku.Views.ConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gomoku.Views"
        xmlns:controls="clr-namespace:Gomoku.Controls" xmlns:viewmodels="clr-namespace:Gomoku.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:ConnectViewModel}"
        xmlns:conv="clr-namespace:Gomoku.Converter"
        mc:Ignorable="d"
        Title="ConnectWindow" Width="381" SizeToContent="Height"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <conv:EnumToBoolConverter x:Key="EnumToBool"/>
        <Style TargetType="RadioButton">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>
    <Grid>
        <UniformGrid Columns="2" Margin="2,2" IsHitTestVisible="False">
            <FrameworkElement x:Name="c1"/>
        </UniformGrid>
        <TabControl Padding="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Width" Value="{Binding ElementName=c1, Path=ActualWidth}"/>
                    <Setter Property="Height" Value="30"/>
                </Style>
            </TabControl.Resources>
            <TabItem Header="서버 생성" IsSelected="{Binding ConnectionType, Converter={StaticResource EnumToBool}, ConverterParameter=Server}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3.5*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Content="아이피 주소" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15"/>
                    <Label Grid.Column="1" Content="포트" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15"/>

                    <Label Grid.Row="1" Grid.Column="0" FontSize="15" VerticalAlignment="Center" Content="127.0.0.1" HorizontalAlignment="Center"/>
                    <controls:NumericTextBox Grid.Row="1" Grid.Column="1" FontSize="14" VerticalAlignment="Center" Value="{Binding Port}" Margin="10,1"/>
                    <GroupBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="10,10" Header="쌍삼 룰">
                        <UniformGrid Columns="3" Margin="5">
                            <!-- 쌍삼 룰 - 택 1 -->
                            <RadioButton Content="둘 다 허용" IsChecked="{Binding SelectedDTRule, Converter={StaticResource EnumToBool}, ConverterParameter=BothAllowed}"/>
                            <RadioButton Content="백만 허용" IsChecked="{Binding SelectedDTRule, Converter={StaticResource EnumToBool}, ConverterParameter=WhiteOnly}"/>
                            <RadioButton Content="둘 다 금지" IsChecked="{Binding SelectedDTRule, Converter={StaticResource EnumToBool}, ConverterParameter=BothForbidden}"/>
                        </UniformGrid>
                    </GroupBox>
                    <Label Grid.Row="3" Grid.Column="0" FontSize="15" VerticalAlignment="Center" Content="닉네임"/>
                    <TextBox Grid.Row="4" Grid.ColumnSpan="2" Margin="5,5" Text="{Binding Nickname}"/>
                    <Button Grid.Row="5" Grid.Column="1" Margin="5" Content="확인" FontSize="12" Command="{Binding ConnectCommand}"/>
                </Grid>
            </TabItem>
            <TabItem Header="서버 참여" IsSelected="{Binding ConnectionType, Converter={StaticResource EnumToBool}, ConverterParameter=Client}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3.5*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="아이피 주소" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15"/>
                    <Label Grid.Column="1" Content="포트" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15"/>

                    <TextBox Grid.Row="1" FontSize="14" Text="{Binding IpAddress}" VerticalAlignment="Stretch" Margin="5,10,5,10"/>
                    <controls:NumericTextBox Grid.Row="1" Grid.Column="1" FontSize="14" VerticalAlignment="Center" Value="{Binding Port}" Margin="10,1"/>
                    <Label Grid.Row="2" Grid.Column="0" FontSize="15" VerticalAlignment="Center" Content="닉네임"/>
                    <TextBox Grid.Row="3" Grid.ColumnSpan="2" Margin="5,10,5,10" Text="{Binding Nickname}"/>
                    <Button Grid.Column="1" Grid.Row="4" Margin="5" Content="확인" FontSize="12" Command="{Binding ConnectCommand}"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
