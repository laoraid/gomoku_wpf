<Window x:Class="Gomoku.Views.ConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gomoku.Views"
        xmlns:controls="clr-namespace:Gomoku.Controls" xmlns:viewmodels="clr-namespace:Gomoku.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:ConnectViewModel}"
        xmlns:conv="clr-namespace:Gomoku.Converter"
        xmlns:helpers="clr-namespace:Gomoku.Helpers"
        mc:Ignorable="d"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{Binding ElementName=AppearanceElement, Path=(TextElement.Foreground)}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}"
        
        Title="ConnectWindow" Width="381" SizeToContent="Height"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <conv:EnumToBoolConverter x:Key="EnumToBool"/>
        <Style TargetType="RadioButton">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        <Style TargetType="GroupBox" BasedOn="{StaticResource MaterialDesignGroupBox}">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <UniformGrid Columns="2" Margin="2,2" IsHitTestVisible="False">
            <FrameworkElement x:Name="c1"/>
        </UniformGrid>
        <TabControl Padding="0" Style="{StaticResource MaterialDesignTabControl}">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Width" Value="{Binding ElementName=c1, Path=ActualWidth}"/>
                    <Setter Property="Height" Value="30"/>
                </Style>
            </TabControl.Resources>
            <TabItem Header="서버 생성" IsSelected="{Binding ConnectionType, Converter={StaticResource EnumToBool}, ConverterParameter=Server}"
                     Style="{StaticResource MaterialDesignTabItem}">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <GroupBox Header="아이피 주소" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Stretch" 
                              Margin="0,0,5,0" Padding="0">
                        <Label FontSize="15" VerticalAlignment="Center" Content="{Binding ServerIpAddress}" HorizontalAlignment="Center"/>
                    </GroupBox>

                    <GroupBox Header="포트" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Stretch" 
                              Margin="0" Padding="0">
                        <materialDesign:NumericUpDown Grid.Row="1" Grid.Column="1" FontSize="14" MinWidth="80"
                                                  VerticalAlignment="Center" Value="{Binding Port}"/>
                    </GroupBox>
                    <GroupBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,5" Header="쌍삼 룰">
                        <UniformGrid Columns="3" Margin="5">
                            <!-- 쌍삼 룰 - 택 1 -->
                            <RadioButton Content="둘 다 허용" IsChecked="{Binding SelectedDTRule, Converter={StaticResource EnumToBool}, ConverterParameter=BothAllowed}"/>
                            <RadioButton Content="백만 허용" IsChecked="{Binding SelectedDTRule, Converter={StaticResource EnumToBool}, ConverterParameter=WhiteOnlyAllow}"/>
                            <RadioButton Content="둘 다 금지" IsChecked="{Binding SelectedDTRule, Converter={StaticResource EnumToBool}, ConverterParameter=BothForbidden}"/>
                        </UniformGrid>
                    </GroupBox>
                    <GroupBox Grid.Row="2" Grid.ColumnSpan="2" Header="닉네임" Margin="0,5">
                        <TextBox Margin="5,10,5,10">
                            <TextBox.Text>
                                <Binding Path="Nickname" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <helpers:NotEmptyValidationRule ValidatesOnTargetUpdated="True"/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="서버 참여" IsSelected="{Binding ConnectionType, Converter={StaticResource EnumToBool}, ConverterParameter=Client}"
                     Style="{StaticResource MaterialDesignTabItem}">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <GroupBox Header="아이피 주소" Margin="0,0,5,5">
                        <TextBox FontSize="14" VerticalAlignment="Stretch" Margin="5,10,5,10">
                            <TextBox.Text>
                                <Binding Path="IpAddress" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <helpers:IpAddressValidationRule ValidatesOnTargetUpdated="True"/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </GroupBox>
                    <GroupBox Header="포트" Grid.Column="1" Margin="0,0,0,5">
                        <materialDesign:NumericUpDown Grid.Row="1" Grid.Column="1" FontSize="14" MinWidth="80"
                              VerticalAlignment="Center" Value="{Binding Port}"/>
                    </GroupBox>
                    <GroupBox Header="닉네임" Grid.Row="1" Grid.ColumnSpan="2">
                        <TextBox Margin="5,10,5,10">
                            <TextBox.Text>
                                <Binding Path="Nickname" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <helpers:NotEmptyValidationRule ValidatesOnTargetUpdated="True"/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="혼자 두기" IsSelected="{Binding ConnectionType, Converter={StaticResource EnumToBool}, ConverterParameter=Single}"
         Style="{StaticResource MaterialDesignTabItem}">
                <GroupBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" Header="쌍삼 룰">
                    <UniformGrid Columns="3" Margin="5">
                        <!-- 쌍삼 룰 - 택 1 -->
                        <RadioButton Content="둘 다 허용" IsChecked="{Binding SelectedDTRule, Converter={StaticResource EnumToBool}, ConverterParameter=BothAllowed}"/>
                        <RadioButton Content="백만 허용" IsChecked="{Binding SelectedDTRule, Converter={StaticResource EnumToBool}, ConverterParameter=WhiteOnlyAllow}"/>
                        <RadioButton Content="둘 다 금지" IsChecked="{Binding SelectedDTRule, Converter={StaticResource EnumToBool}, ConverterParameter=BothForbidden}"/>
                    </UniformGrid>
                </GroupBox>
            </TabItem>
        </TabControl>
        <Button Grid.Row="1" Margin="5,5,5,5" Content="확인" FontSize="12" Command="{Binding ConfirmCommand}"
                HorizontalAlignment="Right"/>
    </Grid>
</Window>
